<!--pages/my/index.wxml-->
<view class="container">
	<view class="profile">
		<image src="{{userInfo.backgroundImage || backgroundImage}}" mode="aspectFill" class="background" />
		<block wx:if="{{userInfo != ''}}">
			<navigator url="../profile/index" class="info">
				<Avatar src="{{userInfo.avatar}}" class="avatar" />
				<text>{{userInfo.username}}</text>
				<Icon name="jinqv"></Icon>
			</navigator>
		</block>
		<block wx:else>
			<navigator class="info" url="../login/index" style="font-size: 1.5rem;">
				登陆/注册
				<Icon name="jinqv"></Icon>
			</navigator>
		</block>
	</view>
	<view class="main">
		<view class="level-card main-item">
			<view class="level">
				<text style="font-size: 1.2rem;">LV.0</text>
				小迷鹿
			</view>
			<view class="level-navbar">
				<view class="level-navbar-info">
					<view class="left">
						<text style="font-size: 1.5rem;">0</text>
						<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/咖啡豆.png" mode="widthFix" style="width: 20rpx;" />
					</view>
					<view class="right" style="font-size: .8rem; color: var(--color-03);">
						去喝一杯，加入luckin
						<Icon name="jinqv"></Icon>
					</view>
				</view>
				<view class="level-bar"></view>
			</view>
		</view>
		<view class="function-panel main-item">
			<navigator url="../myOrder/index" class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/我的订单.png" mode="aspectFill" class="function-icon" />
				<text>我的订单</text>
			</navigator>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/优惠券.png" mode="aspectFill" class="function-icon" />
				<text>优惠券</text>
			</view>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/招商加盟.png" mode="aspectFill" class="function-icon" />
				<text>招商加盟</text>
			</view>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/账户余额.png" mode="aspectFill" class="function-icon" />
				<text>账户余额</text>
			</view>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/账户余额.png" mode="aspectFill" class="function-icon" />
				<text>账户余额</text>
			</view>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/账户余额.png" mode="aspectFill" class="function-icon" />
				<text>账户余额</text>
			</view>
			<view class="function-panel-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/账户余额.png" mode="aspectFill" class="function-icon" />
				<text>账户余额</text>
			</view>
		</view>
		<view class="main-item">
			<Banner></Banner>
		</view>
		<view class="gift-card main-item">
			<view class="top" style="display: flex;justify-content: space-between;align-items: center;">
				<view class="title" style="font-size: 1.1rem; font-weight: 700; margin-bottom: 20rpx;">送礼品卡</view>
				<view class="sub-title" style="font-size: .8rem; color: var(--color-03);">查看全部</view>
			</view>
			<view class="gift-card-item">
				<image src="cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/CtwhAmWRkUyAIBuDAAGBIkSRN2Q156.png" mode="widthFix" />
			</view>
		</view>
	</view>
</view>
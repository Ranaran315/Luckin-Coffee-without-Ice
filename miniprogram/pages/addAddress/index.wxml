<!--pages/addAddress/index.wxml-->
<view class="container">
	<Form class="address-form" data="{{address}}" label-width="120">
		<FormItem class="address-form-item" label="联系人">
			<view style="width: 100%;display: flex;align-items: center;justify-content: space-between;">
				<input type="text" placeholder="用于取餐时对您的称呼" value="{{address.name}}" bind:input="handlerInput" data-id="name" />
				<view class="import-from-wx" bind:tap="importAddressFromWx">
					<Icon name="weixin" style="color: var(--wx-color);margin-right: 10rpx;" />
					微信导入
				</view>
			</view>
		</FormItem>
		<FormItem class="address-form-item" label="性别">
			<RadioGroup options="{{gender}}" name="name" checked="{{address.genderId}}" checkedRule="id" size="30" bind:change="chooseGender"></RadioGroup>
		</FormItem>
		<FormItem class="address-form-item" label="手机号">
			<input type="text" placeholder="请输入您的手机号" value="{{address.phone}}" bind:input="handlerInput" data-id="phone" />
		</FormItem>
		<FormItem class="address-form-item" label="地址">
			<view class="address" bind:tap="chooseAddress">
				<input type="text" placeholder="选择收货地址" disabled="true" value="{{address.address}}" />
				<Icon name="jinqv" class="address-icon"></Icon>
			</view>
		</FormItem>
		<FormItem class="address-form-item" label="门牌号">
			<input type="text" placeholder="如：5号楼208室" value="{{address.houseNumber}}" bind:input="handlerInput" data-id="houseNumber" />
		</FormItem>
		<FormItem class="address-form-item" label="标签">
			<block wx:for="{{tagList}}" wx:key="id">
				<view class="tag {{address.tag.id == item.id ? 'selected' : ''}}" bind:tap="chooseTag" data-item="{{item}}">{{item.name}}</view>
			</block>
		</FormItem>
		<FormItem class="address-form-item" class="address-form-item" label="默认地址">
			<view class="default-address-tab">
				<Tab value="{{address.isDefault}}" bind:change="changeIsDefault"></Tab>
			</view>
		</FormItem>
	</Form>
	<LuckinButton class="save-btn" type="primary" bind:tap="save">保存</LuckinButton>
</view>
<Loading isLoading="{{isLoading}}"></Loading>
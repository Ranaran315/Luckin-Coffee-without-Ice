/* pages/loginByPhone/index.wxss */

.container {
	padding: var(--page-padding);
}

.container .logo {
	width: 50%;
	height: 25vh;
}

.container .form {
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: var(--bg-02);
	width: 100%;
	border-radius: var(--br);
	padding: 0 20rpx;
}

.container .form .form-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	height: 100rpx;
	border-bottom: 2rpx solid var(--bg-04);
}

.container .form .form-item:last-child {
	border: none;
}

.container .form .form-item input {
	width: 100%;
	margin: 0 10rpx;
}

.container .form .form-item .checked-number {
	font-size: .9rem !important;
	font-weight: 500 !important;
	color: var(--secondary-color);
	border: 2rpx solid var(--secondary-color);
	border-radius: 50rpx;
	padding: 10rpx 10rpx !important;
}

.container .footer {
	display: flex;
	align-items: center;
	white-space: nowrap;
	font-size: .7rem;
}

.container .footer .agreement {
	color: var(--primary-color);
}
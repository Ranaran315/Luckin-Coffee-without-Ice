<!--pages/loginByPhone/index.wxml-->
<view class="container">
	<view class="logo">
		<image src="../cloud://cloud1-5gya1gnp983b86b0.636c-cloud1-5gya1gnp983b86b0-1323577987/logo1.png" mode="aspectFit" />
	</view>
	<view class="form">
		<view class="form-item">
			<input type="number" placeholder="请输入手机号" value="{{form.phone}}" bind:input="handlerInput" data-type="phone" />
		</view>
		<view class="form-item">
			<input type="number" placeholder="请入手机验证码" value="{{form.checkedNumber}}" bind:input="handlerInput" data-type="checkedNumber" />
			<button class="checked-number">获取验证码</button>
		</view>
	</view>
	<LuckinButton type="primary" style="width: 100%;" bind:tap="login">确定</LuckinButton>
	<view class="footer">
		<Radio value="{{isChecked}}" size="25" bind:change="handlerChange" />我已阅读并同意
		<navigator class="agreement" url="">《瑞幸咖啡用户协议》</navigator>
		<navigator class="agreement" url="">《隐私协议》</navigator>
		<navigator class="agreement" url="">《支付协议》</navigator>
	</view>
</view>
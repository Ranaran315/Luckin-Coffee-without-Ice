/* components/radio/index.wxss */
.radio {
	height: 50rpx;
	position: relative;
	margin: 10rpx;
	color: var(--color-02);
	display: flex;
	align-items: center;
}

.radio-box {
	width: 50rpx;
	height: 100%;
	border-radius: 50%;
}

.checked,.unchecked {
	width: 100%;
	height: 100%;
	padding: 10%;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.checked {
	background-color: var(--primary-color);
}

.unchecked {
	border: 2rpx solid var(--color-03);
}

.show-value {
	height: 100%;
	color: #000;
	margin-left: 10rpx;
}
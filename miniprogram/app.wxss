/**app.wxss**/
view {
  box-sizing: border-box;
}

.container {
  --bg-01: #f4f4f4;
  --bg-02: #ffffff;
  --bg-03: #2d3035;
  --color-01: #c79347;
  --br: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image {
  width: 100%;
  height: 100%;
}
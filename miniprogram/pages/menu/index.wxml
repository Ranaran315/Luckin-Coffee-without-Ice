<!--pages/order/index.wxml-->
<view class="container">
	<view class="header">
		<view class="pindan">
			<text>ÊãºÂçï</text>
		</view>
		<view class="search">
			<icon class="icon" type="search"></icon>
			<input type="text" placeholder="2024ÂøÉÊÉ≥‰∫ãÊàêüçä" />
		</view>
	</view>
	<view class="center">
		<view class="left">
			<view class="store" wx:if="{{isSelf}}">
				<view class="store-name">{{store.name}}</view>
				<view class="store-desc">{{store.desc}}</view>
			</view>
			<view class="address" wx:else>
				<view class="address-name">{{address.address}}</view>
				<view class="meta">
					<view class="meta-item">{{address.phone}}</view>
					<view class="meta-item">{{address.name}}{{address.gender.name}}</view>
				</view>
			</view>
		</view>
		<view class="right">
			<SwitchTab value="{{isSelf}}" leftText="Ëá™Êèê"  rightText="Â§ñÈÄÅ" bind:change="selectDeliveryType"></SwitchTab>
		</view>
	</view>
	<view class="main">
		<scroll-view class="left" scroll-y="true">
			<block wx:for="{{categoryList}}" wx:key="id">
				<view class="left-item {{currentCategoryIndex == index ? 'selected' : ''}}" bind:tap="selectCategory" data-index="{{index}}">
					<view class="before"></view>
					{{item.name}}
				</view>
			</block>
		</scroll-view>
		<scroll-view class="right" scroll-y="true">
			<block wx:for="{{dataList}}" wx:for-item="data" wx:key="id">
				<view class="right-item">
					<view class="header">
						<text class="title">{{data.name}}</text>
						<text class="desc">{{data.desc}}</text>
					</view>
					<block wx:for="{{data.coffeeList}}" wx:for-item="coffee" wx:key="id">
						<view class="coffee-item">
							<image class="cover-image" src="{{coffee.coverImg}}" mode="aspectFill"></image>
							<view class="sale-info">
								<text class="title">{{coffee.name}}</text>
								<text class="desc">{{coffee.desc}}</text>
								<view class="price">
									<text class="price-sale">Ôø•{{coffee.price_sale}}</text>
									<text class="price-face">(Èù¢‰ª∑<text style="text-decoration: line-through;">Ôø•{{coffee.price_face}}</text>)</text>
								</view>
							</view>
							<image class="icon-add" src="../../images/icon_add.png" mode="aspectFill"/>
						</view>
					</block>
				</view>
			</block>
		</scroll-view>
		<view class="cart">
			<image src="../../images/cart_icon.png" mode="aspectFill"/>
		</view>
	</view>
</view>
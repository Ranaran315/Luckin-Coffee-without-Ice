/**app.wxss**/
@import "./styles/var.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: var(--bg-01);
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

navigator {
  text-decoration: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image, video {
  width: 100%;
  height: 100%;
}

text {
  font-size: 1rem;
}
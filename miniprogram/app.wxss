/**app.wxss**/
@import "./styles/var.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: var(--bg-01);
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

navigator {
  text-decoration: none;
}

navigator:focus {
  background-color: transparent;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image,
video {
  width: 100%;
  height: 100%;
}

@font-face {
  font-family: "alimamafangyuanti";
  src: url("//at.alicdn.com/wf/webfont/Qj10Iy0VJqWU/hhK1tZoVHsZw.woff2") format("woff2"),
    url("//at.alicdn.com/wf/webfont/Qj10Iy0VJqWU/7XwLkvDCbp7v.woff") format("woff");
  font-display: swap;
}

.price,
.level-card {
  font-family: "alimamafangyuanti";
  font-weight: 700;
}
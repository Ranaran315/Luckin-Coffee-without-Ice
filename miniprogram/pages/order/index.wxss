/* pages/order/index.wxss */
.container {
	--box-padding: 30rpx 20rpx;
	--payment-box-height: 150rpx;
	padding: var(--page-padding);
	padding-bottom: calc(var(--payment-box-height) + 20rpx);
}

.container .estimated-time-info-box,
.container .delivery-info-box,
.container .goods-info-box,
.container .payment-type-box,
.container .notes-box {
	width: 100%;
	background-color: var(--bg-02);
	border-radius: var(--br);
	padding: var(--box-padding);
	margin-bottom: 20rpx;
	display: flex;
}

.container .estimated-time-info-box .left,
.container .delivery-info-box .left {
	display: flex;
	flex-direction: column;
	width: 70%;
}

.container .estimated-time-info-box .right,
.container .delivery-info-box .right {
	width: 30%;
}

.container .delivery-info-box .left .store-name,
.container .delivery-info-box .left .address-name {
	display: flex;
	align-items: center;
	margin-right: 20rpx;
}

.container .delivery-info-box .left .store-name .name,
.container .delivery-info-box .left .address-name .name {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.container .delivery-info-box .left .store-detail-address,
.container .delivery-info-box .left .address-detail-info {
	margin-top: 10rpx;
	font-size: .8rem;
	color: var(--color-03);
	display: flex;
}

.container .goods-info-box {
	flex-direction: column;
}

.container .goods-info-box .good-item	{
	height: 150rpx;
	display: flex;
	padding: 15rpx 0;
}

.container .goods-info-box .good-item .center.detail-info {
	flex: 1;
}

.container .goods-info-box .good-item .center.detail-info .meta {
	display: flex;
	font-size: .8rem;
	color: var(--color-03);
	margin: 5rpx 0;
}

.container .goods-info-box .good-item .center.detail-info .meta .meta-item::after {
	content: "/";
}

.container .goods-info-box .good-item .center.detail-info .meta .meta-item:last-child:after {
	content: ""
}

.container .goods-info-box .good-item .right.price {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
}

.container .goods-info-box .preferential {
	display: flex;
	justify-content: space-between;
	margin: 30rpx 0;
}

.container .goods-info-box .hr {
	height: 0;
	border: 1rpx dashed var(--color-03);
	position: relative;
}

.container .goods-info-box .hr::before, 
.container .goods-info-box .hr::after {
	content: "";
	position: absolute;
	top: 50%;
	background-color: var(--bg-01);
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
}

.container .goods-info-box .hr::before {
	left: 0;
	transform: translate(-100%,-50%);
}

.container .goods-info-box .hr::after {
	right: 0;
	transform: translate(100%,-50%);
}

.container .goods-info-box .payment-may {
	display: flex;
	justify-content: flex-end;
	margin: 30rpx 0;
}

.container .payment-type-box {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.container .notes-box {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.container .notes-box .note {
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-weight: 700;
	font-size: .9rem;
}

.container .payment-box {
	width: 100%;
	height: var(--payment-box-height);
	background-color: var(--bg-02);
	padding: var(--box-padding);
	position: fixed;
	bottom: 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 1;
}

.container .payment-box .left {
	display: flex;
	flex-direction: column;
}

.container .payment-box .left .payment-may,
.container .payment-box .left .preferential {
	display: flex;
	align-items: flex-end;
}

.container .payment-box .right {
	width: 300rpx;
}

.container .notes-box-dialog {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100vh;
	z-index: 2;
}

.container .notes-box-dialog .mask {
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
	right: 0;
	background-color: rgba(0,0,0,.8);
}

.container .notes-box-dialog .dialog {
	position: absolute;
	left: 50%;
	bottom: 50rpx;
	transform: translateX(-50%);
	width: 90%;
	background-color: var(--bg-02);
	border-radius: var(--br);
}

.container .notes-box-dialog .dialog .top {
	background-color: var(--bg-01);
	font-size: 1.3rem;
	border-top-left-radius: var(--br);
	border-top-right-radius: var(--br);
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	display: flex;
	justify-content: center;
	padding: 0 20rpx;
}

.container .notes-box-dialog .dialog .center,
.container .notes-box-dialog .dialog .bottom {
	padding: 0 30rpx;
}

.container .notes-box-dialog .dialog .center .meta {
	display: flex;
	flex-direction: column;
}

.container .notes-box-dialog .dialog .center .meta .meta-item {
	display: flex;
	align-items: center;
	margin: 20rpx 0;
}

.container .notes-box-dialog .dialog .center .meta .meta-item .right {
	display: flex;
	align-items: center;
}

.container .notes-box-dialog .dialog .center .meta .meta-item .right .right-item {
	margin-right: 20rpx;
	font-size: .8rem;
	padding: 10rpx 20rpx;
	background-color: var(--bg-01);
	border-radius: 50rpx;
}

.container .notes-box-dialog .dialog .center .meta .meta-item .right .right-item.selected {
	border: 2rpx solid var(--primary-color);
	color: var(--primary-color);
}

.container .notes-box-dialog .dialog .center textarea {
	width: 100%;
	background-color: var(--bg-01);
	border-radius: var(--br);
	padding: 20rpx;
	box-sizing: border-box;
	height: 200rpx;
}

